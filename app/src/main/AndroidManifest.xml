<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.okason.prontonotepad">

    <application
        android:name=".ProntoNotepadApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:supportsRtl">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Auth UI demo -->
        <activity
            android:name=".auth.SignedInActivity"
            android:label="@string/name_auth_ui" />
        <activity
            android:name=".auth.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- Auth UI demo -->
        <activity
            android:name=".auth.AuthUiActivity"
            android:label="@string/name_auth_ui" />
        <activity
            android:name=".ui.addNote.AddNoteActivity"
            android:label="@string/title_activity_add_note"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.okason.prontonotepad.MainActivity" />
        </activity>
        <activity
            android:name=".ui.category.CategoryActivity"
            android:label="@string/title_activity_category"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.okason.prontonotepad.MainActivity" />
        </activity>

        <service
            android:name=".services.DeleteCategoryIntentService"
            android:exported="false" />

        <activity
            android:name=".ui.notedetails.NoteDetailActivity"
            android:label="@string/title_activity_note_details"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.okason.prontonotepad.MainActivity" />
        </activity>
    </application>

</manifest>